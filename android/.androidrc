export ANT_HOME=$HOME/.asdf/shims/ant
export MAVEN_HOME=$HOME/.asdf/shims/mvn
export GRADLE_HOME=$HOME/.asdf/shims/gradle
export ANDROID_SDK_ROOT=$HOME/Library/Android/sdk
export ANDROID_HOME=$ANDROID_SDK_ROOT
export ANDROID_NDK_HOME=$ANDROID_SDK_ROOT/ndk/$(ls $ANDROID_SDK_ROOT/ndk | sort | tail -1)
