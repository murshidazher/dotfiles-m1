[alias]
# also, don't forget git-extras:
# https://github.com/tj/git-extras/blob/master/Commands.md

ap = !"git add -p"
gaa = !"git add ."
puo = !"git push -u origin $(git branch --show-current)"
puom = !"git push -u origin master"
puod = !"git push -u origin develop"
cne = !"git commit --amend --no-edit"
pfo = !"git push -f origin $(git branch --show-current)"
gpr = !"git pull --rebase"
gup = !"git stash && git pull --rebase && git stash pop"
gdup = !"git stash && git checkout develop && git pull && git checkout - && git pull --rebase && git stash pop"

branch-name = !"git branch --show-current"

# View abbreviated SHA, description, and history graph of the latest 20 commits
l = log --pretty=oneline -n 20 --graph --abbrev-commit
ll = log --pretty=oneline -n 50 --graph --abbrev-commit
lg = log --pretty=oneline --graph --abbrev-commit
graph = log --graph --all --decorate --stat --date=iso

# View the current working tree status using the short format
s = status -s

# Show the diff between the latest commit and the current state
d = !"git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"

# `git di $number` shows the diff between the state `$number` revisions ago and the current state
di = !"d() { git diff --patch-with-stat HEAD~$1; }; git diff-index --quiet HEAD -- || clear; d"

# `git sf $sha` shows only the files in commit
sf = "!f() { git diff-tree --no-commit-id --name-only -r $1; }; f"

# fetch with prune
fp = fetch --prune

# Submodule sync
subsync = !"git submodule sync; git submodule update --init"

# Pull in remote changes for the current repository and all its submodules
plsm = !"git pull; git submodule foreach git pull origin master"

# Pull with rebase
plreb = !"git pull --rebase"

# Clone a repository including all submodules
c = clone --recursive

# Commit all changes
# ca = !git add -A && git commit -av

# Semantic commit messages
# credit: https://github.com/fteem/git-semantic-commits
c-breaking = "!f() { if [ -z \"$1\"  ]; then git commit -m \":boom: breaking: \" -e; elif [ -z \"$2\" ]; then git commit -m \":boom: breaking: $1\"; else git commit -m \":boom: breaking($1): $2\"; fi }; f"
c-build = "!f() { if [ -z \"$1\"  ]; then git commit -m \":package: build: \" -e; elif [ -z \"$2\" ]; then git commit -m \":package: build: $1\"; else git commit -m \":package: build($1): $2\"; fi }; f"
c-config = "!f() { if [ -z \"$1\"  ]; then git commit -m \":gear: config: \" -e; elif [ -z \"$2\" ]; then git commit -m \":gear: config: $1\"; else git commit -m \":gear: config($1): $2\"; fi }; f"
c-chore = "!f() { if [ -z \"$1\"  ]; then git commit -m \":wrench: chore: \" -e; elif [ -z \"$2\" ]; then git commit -m \":wrench: chore: $1\"; else git commit -m \":wrench: chore($1): $2\"; fi }; f"
c-chore-re = "!f() { if [ -z \"$1\"  ]; then git commit -m \" :rocket: chore(release): \" -e; elif [ -z \"$2\" ]; then git commit -m \" :rocket: chore(release): $1\"; else git commit -m \" :rocket: chore($1): $2\"; fi }; f"
c-chore-dep = "!f() { if [ -z \"$1\"  ]; then git commit -m \" :link: chore(deps): \" -e; elif [ -z \"$2\" ]; then git commit -m \" :link: chore(deps): $1\"; else git commit -m \" :link: chore($1): $2\"; fi }; f"
c-ci = "!f() { if [ -z \"$1\"  ]; then git commit -m \":construction_worker: ci: \" -e; elif [ -z \"$2\" ]; then git commit -m \":construction_worker: ci: $1\"; else git commit -m \":construction_worker: ci($1): $2\"; fi }; f"
c-docs = "!f() { if [ -z \"$1\"  ]; then git commit -m \":books: docs: \" -e; elif [ -z \"$2\" ]; then git commit -m \":books: docs: $1\"; else git commit -m \":books: docs($1): $2\"; fi }; f"
c-feat = "!f() { if [ -z \"$1\"  ]; then git commit -m \":sparkles: feat: \" -e; elif [ -z \"$2\" ]; then git commit -m \":sparkles: feat: $1\"; else git commit -m \":sparkles: feat($1): $2\"; fi }; f"
c-fix = "!f() { if [ -z \"$1\"  ]; then git commit -m \":bug: fix: \" -e; elif [ -z \"$2\" ]; then git commit -m \":bug: fix: $1\"; else git commit -m \":bug: fix($1): $2\"; fi }; f"
c-localize = "!f() { if [ -z \"$1\"  ]; then git commit -m \":globe_with_meridians: localize: \" -e; elif [ -z \"$2\" ]; then git commit -m \":globe_with_meridians: localize: $1\"; else git commit -m \":globe_with_meridians: localize($1): $2\"; fi }; f"
c-perf = "!f() { if [ -z \"$1\"  ]; then git commit -m \":zap: perf: \" -e; elif [ -z \"$2\" ]; then git commit -m \":zap: perf: $1\"; else git commit -m \":zap: perf($1): $2\"; fi }; f"
c-refactor = "!f() { if [ -z \"$1\"  ]; then git commit -m \":recycle: refactor: \" -e; elif [ -z \"$2\" ]; then git commit -m \":recycle: refactor: $1\"; else git commit -m \":recycle: refactor($1): $2\"; fi }; f"
c-revert = "!f() { if [ -z \"$1\"  ]; then git commit -m \":cyclone: revert: \" -e; elif [ -z \"$2\" ]; then git commit -m \":cyclone: revert: $1\"; else git commit -m \":cyclone: revert($1): $2\"; fi }; f"
c-security = "!f() { if [ -z \"$1\"  ]; then git commit -m \":lock: security: \" -e; elif [ -z \"$2\" ]; then git commit -m \":lock: security: $1\"; else git commit -m \":lock: security($1): $2\"; fi }; f"
c-style = "!f() { if [ -z \"$1\"  ]; then git commit -m \":art: style: \" -e; elif [ -z \"$2\" ]; then git commit -m \":art: style: $1\"; else git commit -m \":art: style($1): $2\"; fi }; f"
c-test = "!f() { if [ -z \"$1\"  ]; then git commit -m \":rotating_light: test: \" -e; elif [ -z \"$2\" ]; then git commit -m \":rotating_light: test: $1\"; else git commit -m \":rotating_light: test($1): $2\"; fi }; f"

c-semantic = "!f() { echo \"breaking, build, chore, c-chore-re, c-chore-dep, ci, docs, feat, fix, localize, perf, refactor, revert, security, style, test \"; }; f"

# Switch to a branch, creating it if necessary
go = "!f() { git checkout -b \"$1\" 2> /dev/null || git checkout \"$1\"; }; f"

# Become
become = "!git checkout -B \"$(git symbolic-ref --short HEAD)\""

# Show verbose output about tags, branches or remotes
tags = tag -l
branches = branch -a
bv = branch -vv
remotes = remote -v

# List aliases
aliases = config --get-regexp alias

# Amend the currently staged files to the latest commit
amend = commit --amend --reuse-message=HEAD

# Credit an author on the latest commit
credit = "!f() { git commit --amend --author \"$1 <$2>\" -C HEAD; }; f"

# Interactive rebase with the given number of latest commits
reb = "!r() { git rebase -i HEAD~$1; }; r"

# Remove the old tag with this name and tag the latest commit with it.
#retag = "!r() { git tag -d $1 && git push origin :refs/tags/$1 && git tag $1; }; r"

# Find branches containing commit
fbc = "!f() { git branch -a --contains $1; }; f"

# Find tags containing commit
ftc = "!f() { git describe --always --contains $1; }; f"

# Find commits by source code
fcc = "!f() { git log --pretty=format:'%C(yellow)%h  %Cblue%ad  %Creset%s%Cgreen  [%cn] %Cred%d' --decorate --date=short -S$1; }; f"

# Find commits by commit message
fcm = "!f() { git log --pretty=format:'%C(yellow)%h  %Cblue%ad  %Creset%s%Cgreen  [%cn] %Cred%d' --decorate --date=short --grep=$1; }; f"

# Remove branches that have already been merged with master
# a.k.a. ‘delete merged’
#dbmm = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"

# "Delete Branch For Real"
#dbfr = "!git branch -D && git push origin :$1"

# List contributors with number of commits
contributors = shortlog --summary --numbered

# Recap
recap = log --all --oneline --no-merges --author="murshid@different.com.au"

# Today
today = log --since=00:00:00 --all --no-merges --oneline --author="murshid@different.com.au"

# Upstream
upstream = "!f() { \
    declare head=\"${1:-HEAD}\"; \
    declare currentBranch=\"$(git symbolic-ref --short HEAD)\"; \
    declare branch=\"${2:-$currentBranch}\"; \
    git log --oneline --no-merges $head..origin/$branch; \
  }; f"

# Local
local = "!f() { \
    declare head=\"${1:-HEAD}\"; \
    declare currentBranch=\"$(git symbolic-ref --short HEAD)\"; \
    declare branch=\"${2:-$currentBranch}\"; \
    git log --oneline --no-merges origin/$branch..$head; \
  }; f"

